<% if @scientist.errors.any? %>
    <h2>
      <%= pluralize(@scientist.errors.count, "error") %>
      prohibited this scientist from being created:
    </h2>
    <ul>
    <% @scientist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>
    <%= f.submit %>
<% end %>